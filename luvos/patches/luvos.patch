+                echo "Including UEFI-SCT"
+                efi_populate_sbbr ${DEST}
+            fi
+            efi_populate_startup ${DEST}
+            echo "SCTOPTIONAL=${SCTOPTIONAL}"
+            efi_populate_sbsa ${DEST}
+            efi_populate_sdei ${DEST}
 
